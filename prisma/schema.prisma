generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  user
  admin
}

enum InvoiceStatus {
  pending
  paid
  cancelled
}

enum PaymentMethod {
  manual
  // more....
}

// Better-Auth models 

model User {
  id            String    @id
  name          String
  email         String
  emailVerified Boolean   @default(false)
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  sessions      Session[]
  accounts      Account[]

  role        Role    @default(user)
  isOnboarded Boolean @default(false)

  deleted   Boolean   @default(false)
  deletedAt DateTime?

  //relations
  profile  UserProfile?
  clients  Client[]
  invoices Invoice[]
  payments Payment[]

  @@unique([email])
  @@map("user")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@index([userId])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@index([userId])
  @@map("account")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([identifier])
  @@map("verification")
}

// InvoDrop Models 

model UserProfile {
  id String @id

  user User @relation(fields: [id], references: [id], onDelete: Cascade)

  currency String

  country String
  address String
  pincode String

  website String?

  logoUrl String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Client {
  id String @id @default(uuid()) @db.Uuid

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  name          String
  email         String
  contactPerson String?

  isActive Boolean

  country String
  address String
  pincode String

  invoiceCount      Int     @default(0)
  totalBilledAmount Decimal @default(0) @db.Decimal(12, 2)

  //relations
  invoices  Invoice[]
  // System
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@unique([userId, email])
}

model Invoice {
  id       String @id @default(uuid()) @db.Uuid
  userId   String
  user     User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  clientId String @db.Uuid
  client   Client @relation(fields: [clientId], references: [id], onDelete: Cascade)

  // Essential Components
  invoiceNumber String
  status        InvoiceStatus
  issueDate     DateTime
  dueDate       DateTime
  currency      String

  // Payment terms
  paymentTerm String

  // Financial calculations
  subTotal   Decimal @db.Decimal(12, 2)
  taxAmount  Decimal @db.Decimal(12, 2)
  grandTotal Decimal @db.Decimal(12, 2)

  balanceDue Decimal @db.Decimal(12, 2)

  // Additional fields
  footerNote String? @db.Text

  // Status tracking

  paidAt DateTime?

  // System
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  items    InvoiceItem[]
  payments Payment[]

  // Constraints
  @@unique([userId, invoiceNumber])
}

model InvoiceItem {
  id        String  @id @default(uuid()) @db.Uuid
  invoiceId String  @db.Uuid
  invoice   Invoice @relation(fields: [invoiceId], references: [id], onDelete: Cascade)

  name        String
  description String?

  unitPrice Decimal @db.Decimal(12, 2)
  quantity  Decimal @db.Decimal(10, 3)

  taxRate   Decimal? @db.Decimal(5, 4)
  taxAmount Decimal? @db.Decimal(12, 2)

  totalAmount Decimal @db.Decimal(12, 2)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Payment {
  id        String  @id @default(uuid()) @db.Uuid
  userId    String
  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  invoiceId String  @db.Uuid
  invoice   Invoice @relation(fields: [invoiceId], references: [id], onDelete: Cascade)

  amount Decimal @db.Decimal(12, 2)

  method PaymentMethod

  description String? @db.Text

  // System
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
